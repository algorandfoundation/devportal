---
import SiteTitle from './SiteTitle.astro';
import SocialIcons from './SocialIcons.astro';
import Default from '@astrojs/starlight/components/Footer.astro';

const isHomepage = Astro.locals.starlightRoute.id === 'index.mdx';

const footerData = {
  links: [
    {
      label: 'Privacy Policy',
      url: 'https://algorand.co/algorand-foundation/privacy-policy',
    },
    {
      label: 'Disclaimer',
      url: 'https://algorand.co/algorand-foundation/disclaimer',
    },
  ],
  copyright:
    'Â© 2025 The Algorand Foundation Ltd is Incorporated in the Republic of Singapore',
};
---

{
  isHomepage ? (
    <footer class='bg-algo-lavender-300 dark:bg-algo-teal-200 text-white! dark:text-algo-navy! rounded-t-[21px] mt-10! lg:mt-[140px]!'>
      <div class='lg:flex lg:justify-between lg:items-end gap-x-10 max-w-(--breakpoint-home-container) mx-auto! pb-[60px] pt-[42px] lg:pb-[72px] lg:pt-[54px] px-5 md:px-9 text-center lg:text-left'>
        <div class='w-full max-w-[175px] lg:max-w-[210px] max-lg:mx-auto!'>
          <SiteTitle {...Astro.props} isFooter={true} />
        </div>
        <div class='lg:grid lg:grid-flow-col lg:gap-x-[60px] max-w-[325px] lg:max-w-[525px] mt-9! lg:mt-0! max-lg:mx-auto!'>
          <div>
            {footerData.links.map(link => (
              <a
                href={link.url}
                target='_blank'
                class='block text-inherit! no-underline font-sans font-medium'
              >
                {link.label}
              </a>
            ))}
          </div>
          <p class='font-sans font-medium leading-[1.8] mt-0!'>
            {footerData.copyright}
          </p>
        </div>
        <div class='homepage-social-icons flex gap-x-[30px] justify-center lg:justify-start mt-9! lg:mt-0! text-white! dark:text-algo-navy!'>
          <SocialIcons {...Astro.props} size='18px' />
        </div>
      </div>
    </footer>
  ) : (
    <Default>
      <slot />
    </Default>
  )
}
