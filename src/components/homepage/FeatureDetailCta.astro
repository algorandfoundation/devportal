---
import CtaButton from './CtaButton.astro';

const featureDetailCtaData = {
  highlight: 'Lorem ipsum dolor sit',
  heading: 'Lorem ipsum dolor sit amet, consectetur adip',
  description:
    'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut et massa mi. Aliquam in hendrerit urna. Pellentesque sit amet sapien fringilla, mattis ligula consectetur. Pellentesque sit amet sapien fringilla, mattis ligula consectetur. Pellentesque sit amet sapien fringilla, mattis ligula consectetur. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut et massa mi.',
  cta: {
    label: 'Get started',
    url: '/nodes/overview/',
  },
};
---

<section class='feature-detail-cta !my-10 lg:!my-[140px] px-4'>
  <div
    class:list={[
      'max-w-screen-2xl lg:flex md:justify-between md:items-center text-algo-navy dark:text-white',
      'mx-auto lg:gap-x-[80px] xl:gap-x-[135px] text-center md:text-left',
    ]}
  >
    <div class='max-w-[805px]'>
      <div class='font-bold lg:text-2xl lg:leading-none'>
        {featureDetailCtaData.highlight}
      </div>
      <h2
        class='text-algo-navy dark:text-white lg:!text-[52px] !mt-[10px] !leading-none'
      >
        {featureDetailCtaData.heading}
      </h2>
      <div class='mt-[43px]'>
        <CtaButton
          label={featureDetailCtaData.cta.label}
          url={featureDetailCtaData.cta.url}
        />
      </div>
    </div>
    <p
      class='lg:max-w-[430px] xl:max-w-[700px] font-sans lg:mt-[18px] lg:text-[22px] lg:leading-[1.5]'
    >
      {featureDetailCtaData.description}
    </p>
  </div>
</section>
