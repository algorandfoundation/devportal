---
import IconCard from './IconCard.astro';

const cards = [
  {
    heading: 'Start with Algokit',
    description: 'Lorem ipsum dolor sit amet, consectetur.',
    icon: 'square-brackets',
  },
  {
    heading: 'Explore sample apps',
    description: 'Lorem ipsum dolor sit amet, consectetur.',
    icon: 'long-right-arrow',
  },
  {
    heading: 'Run a node',
    description: 'Lorem ipsum dolor sit amet, consectetur.',
    icon: 'block',
  },
  {
    heading: 'Connect with developers in discord',
    description: 'Lorem ipsum dolor sit amet, consectetur.',
    icon: 'network',
  },
] as const;
---

<section class='icon-card-grid !my-10 lg:!my-[140px] px-4'>
  <div
    class='max-w-screen-2xl grid md:grid-cols-2 lg:grid-cols-4 gap-[35px] mx-auto'
  >
    {
      cards.map(card => (
        <IconCard
          heading={card.heading}
          description={card.description}
          icon={card.icon}
        />
      ))
    }
  </div>
</section>
