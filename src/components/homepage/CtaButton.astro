---
import { LinkButton } from '@astrojs/starlight/components';
import { Icon } from 'astro-icon/components';

interface Props {
  label: string;
  url: string;
  classList?: string;
  alt?: boolean;
}

const { label, url, classList, alt } = Astro.props;
---

<LinkButton
  href={url}
  class:list={[
    'cta-button inline-flex items-center gap-x-[11px]',
    alt
      ? 'bg-algo-lavender-400! dark:bg-white! text-[20px]! lg:text-[29px]! py-[11px] px-[34px]'
      : 'bg-algo-lavender-200! dark:bg-algo-teal-400! text-[18px]! lg:text-[25px]! py-[10px] px-[28px]',
    'text-white! dark:text-algo-navy! rounded-[17px] font-bold leading-none border-transparent! mx-0!',
    classList,
  ]}
  {...Astro.props}
>
  {label}
  <Icon
    name='long-right-arrow-icon'
    class:list={[
      alt
        ? 'w-[24px] h-[20px] lg:w-[33px] lg:h-[28px]'
        : 'w-[22px] h-[18px] lg:w-[28px] lg:h-[24px] ',
      'text-white! dark:text-algo-navy!',
    ]}
  />
</LinkButton>
