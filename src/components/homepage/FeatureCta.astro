---
import CtaButton from './CtaButton.astro';

const featureCtaData = {
  highlight: 'Start your journey today',
  heading: 'Become an Algorand Developer',
  description:
    'Follow our quick start guide to install Algorandâ€™s developer toolkit and go from zero to deploying your "Hello, world" smart contract in mere minutes using TypeScript or Python pathways.',
  cta: {
    label: 'Install AlgoKit',
    url: 'getting-started/algokit-quick-start',
  },
};
---

<section
  class:list={[
    'feature-cta relative bg-algo-lavender-100 dark:bg-algo-teal-500 before:bg-[url(/grid-lavender.png)] dark:before:bg-[url(/grid-white.png)]',
    'before:bg-repeat before:bg-cover before:bg-center before:opacity-40 before:absolute before:inset-0 before:z-[-1] z-0 rounded-[21px] my-10! lg:my-[140px]!',
  ]}
>
  <div
    class:list={[
      'max-w-(--breakpoint-home-container) md:flex md:justify-between md:items-center text-algo-lavender-400 dark:text-algo-navy',
      'mx-auto! py-[50px] lg:py-[60px] px-5 md:px-9 gap-x-[148px] text-center md:text-left',
    ]}
  >
    <div class='lg:max-w-[660px] xl:max-w-[730px]'>
      <div class='font-bold lg:text-xl lg:leading-none'>
        {featureCtaData.highlight}
      </div>
      <h2
        class='text-algo-lavender-400! dark:text-algo-navy! lg:text-4xl! xl:text-[42px]! mt-[10px]! leading-none!'
      >
        {featureCtaData.heading}
      </h2>
      <p class='font-sans lg:text-[18px] xl:text-[20px] lg:leading-[1.5]'>
        {featureCtaData.description}
      </p>
    </div>

    <div class='shrink-0 mt-0!'>
      <CtaButton
        label={featureCtaData.cta.label}
        url={featureCtaData.cta.url}
        alt={true}
      />
    </div>
  </div>
</section>
