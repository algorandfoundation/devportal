---
import SquareBrackets from '../../icons/shapes/SquareBrackets.astro';
import LongRightArrow from '../../icons/shapes/LongRightArrow.astro';
import Block from '../../icons/shapes/Block.astro';
import Network from '../../icons/shapes/Network.astro';

interface Props {
  heading: string;
  description: string;
  icon: 'square-brackets' | 'long-right-arrow' | 'block' | 'network';
}

const { heading, description, icon } = Astro.props;
---

<div
  class:list={[
    'icon-card bg-algo-lavender-300 dark:bg-algo-teal-100 text-white dark:text-algo-navy px-8 py-[34px] rounded-2xl',
    'flex flex-col !mt-0',
  ]}
>
  <div
    class='grid place-content-center place-items-center w-[70px] h-[70px] bg-algo-lavender-200 dark:bg-algo-teal-500 rounded-[10px] mb-auto ml-auto'
  >
    {icon === 'square-brackets' && <SquareBrackets classList='w-full' />}
    {
      icon === 'long-right-arrow' && (
        <LongRightArrow classList='w-[56px] transform -rotate-45' />
      )
    }
    {icon === 'block' && <Block classList='w-full' />}
    {icon === 'network' && <Network classList='w-full' />}
  </div>
  <div>
    <h3
      class='!text-white dark:!text-algo-navy lg:text-5xl font-bold leading-none'
    >
      {heading}
    </h3>
    <p class='font-sans lg:text-2xl lg:leading-[1.3]'>{description}</p>
  </div>
</div>
