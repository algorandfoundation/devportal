---
import { Icon } from 'astro-icon/components';

interface Props {
  heading: string;
  description: string;
  icon: 'square-brackets' | 'long-right-arrow' | 'block' | 'network';
}

const { heading, description, icon } = Astro.props;
---

<div
  class:list={[
    'icon-card bg-algo-lavender-300 dark:bg-algo-teal-100 text-white dark:text-algo-navy px-8 py-[34px] rounded-2xl',
    'flex flex-col !mt-0',
  ]}
>
  <div
    class:list={[
      'grid place-content-center place-items-center bg-algo-lavender-200 dark:bg-algo-teal-600',
      'w-[55px] h-[55px] lg:w-[70px] lg:h-[70px] rounded-[10px] mb-auto ml-auto',
    ]}
  >
    <Icon
      name={`${icon}-icon`}
      class:list={[
        icon === 'long-right-arrow'
          ? 'w-[45px] lg:w-[56px] transform -rotate-45'
          : 'w-[55px] lg:w-[70px]',
        '!text-white dark:!text-algo-navy',
      ]}
    />
  </div>
  <div>
    <h3
      class='!text-white dark:!text-algo-navy lg:text-5xl font-bold leading-none'
    >
      {heading}
    </h3>
    <p class='font-sans lg:text-2xl lg:leading-[1.3]'>{description}</p>
  </div>
</div>
