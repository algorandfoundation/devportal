---
import HomepageHero from './homepage/HomepageHero.astro';
import Default from '@astrojs/starlight/components/Hero.astro';

// Check if this is the homepage by checking for empty slug
const isHomepage = Astro.locals.starlightRoute?.slug === '';
---

{
  isHomepage ? (
    <HomepageHero />
  ) : (
    <Default>
      <slot />
    </Default>
  )
}
