{
  "name": "algorand-devportal",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "predev": "pnpm run generate-opcode-list && pnpm run generate-diagrams && pnpm run generate-openapi-docs",
    "prebuild": "pnpm run generate-opcode-list && pnpm run generate-diagrams && pnpm run generate-openapi-docs",
    "build": "pnpm run import && astro check && astro build",
    "lint:fix": "eslint . && prettier -c ./src/** --write && astro check",
    "lint": "eslint . && prettier -c ./src/** && astro check",
    "preview": "astro preview",
    "astro": "astro",
    "_section:utils": "====================== Helper Scripts ======================",
    "generate-opcode-list": "npx tsx scripts/generate-opcode-list.js",
    "generate-diagrams": "npx tsx scripts/generate-diagrams.ts",
    "generate-openapi-docs": "npx tsx scripts/generate-openapi-docs.js",
    "_section:legacy-imports": "====================== Legacy Imports ======================",
    "init:submodules": "git submodule update --init",
    "import:poetry": "cd imports/build/python && poetry install",
    "import:algorand-python": "cd imports/build/python && make puya",
    "import:algorand-typescript": "cd imports/repos/puya-ts && npm install",
    "import": "pnpm run init:submodules && pnpm run import:poetry && pnpm run import:algorand-python && pnpm run import:algorand-typescript",
    "_section:github-imports": "====================== GitHub Imports ======================",
    "import:dry-run": "IMPORT_GITHUB=true IMPORT_DRY_RUN=true astro sync",
    "import:all": "IMPORT_GITHUB=true astro sync && pnpm run sidebar:generate && pnpm run lint:fix",
    "clean:all": "npm run clean:arcs && npm run clean:nodekit && npm run clean:cli && npm run clean:utils-ts && npm run clean:utils-py",
    "clean:arcs": "rm -rf src/content/docs/arc-standards src/assets/imports/arc-standards .astro",
    "clean:nodekit": "rm -rf src/content/docs/nodes/nodekit-reference src/assets/imports/nodekit .astro",
    "clean:cli": "rm -rf src/content/docs/algokit/cli src/content/docs/reference/algokit-cli src/assets/imports/algokit-cli .astro",
    "clean:utils-ts": "rm -rf src/content/docs/algokit/utils/typescript src/content/docs/reference/algokit-utils-ts/api src/assets/imports/algokit-utils-ts .astro",
    "clean:utils-py": "rm -rf src/content/docs/algokit/utils/python src/content/docs/reference/algokit-utils-py/api src/assets/imports/algokit-utils-py .astro",
    "_section:sidebar": "====================== Sidebar Scripts ======================",
    "sidebar:generate": "npx tsx scripts/manage-sidebar-meta.js --clean && npx tsx scripts/manage-sidebar-meta.js",
    "sidebar:update": "npx tsx scripts/manage-sidebar-meta.js --update",
    "sidebar:overwrite": "npx tsx scripts/manage-sidebar-meta.js --overwrite",
    "sidebar:preview": "npx tsx scripts/manage-sidebar-meta.js --dry-run"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.1.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/starlight": "^0.32.1",
    "@astrojs/starlight-tailwind": "^3.0.0",
    "@astrojs/tailwind": "^5.1.3",
    "@catppuccin/palette": "^1.2.0",
    "@catppuccin/vscode": "^3.15.1",
    "@larkiny/astro-github-loader": "^1.2.15",
    "@tailwindcss/vite": "^4.0.14",
    "@types/js-yaml": "^4.0.9",
    "astro": "^5.3.1",
    "astro-d2": "^0.3.0",
    "astro-icon": "^1.1.0",
    "astro-rehype-relative-markdown-links": "^0.17.3",
    "astro-remote": "^0.3.3",
    "js-yaml": "^4.1.0",
    "marked": "^13.0.1",
    "octokit": "^5.0.3",
    "picomatch": "^4.0.3",
    "prismjs": "^1.29.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rehype": "^13.0.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.5",
    "starlight-auto-sidebar": "^0.1.2",
    "starlight-image-zoom": "^0.11.1",
    "starlight-links-validator": "^0.12.1",
    "starlight-llms-txt": "^0.5.0",
    "starlight-openapi": "^0.14.1",
    "starlight-typedoc": "^0.17.0",
    "tailwindcss": "^4.0.14",
    "typedoc": "^0.27.3",
    "typedoc-plugin-markdown": "^4.3.1",
    "widdershins": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@eslint/js": "^9.9.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.12.0",
    "@typescript-eslint/parser": "^8.4.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "handlebars": "^4.7.8",
    "pnpm": "^10.6.3",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.19.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.4.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": "^10.6.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
