{
  "name": "algorand-devportal",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "predev": "pnpm run generate-opcode-list",
    "prebuild": "pnpm run generate-opcode-list",
    "build": "astro check && astro build",
    "lint:fix": "eslint . && prettier -c ./src/** --write && astro check",
    "lint": "eslint . && prettier -c ./src/** && astro check",
    "preview": "astro preview",
    "astro": "astro",
    "validate:links": "pkill -f 'astro preview' || true; pkill -f 'astro dev' || true; pnpm run preview & sleep 3 && lychee --config ./lychee.toml --base-url 'http://localhost:4321' './dist/**/*.html'",
    "_section:utils": "====================== Helper Scripts ======================",
    "generate-opcode-list": "npx tsx scripts/generate-opcode-list.js",
    "_section:github-imports": "====================== GitHub Imports ======================",
    "import:docs": "IMPORT_GITHUB=true astro sync && pnpm run sidebar:generate && pnpm run lint:fix",
    "import:force": "FORCE_IMPORT=true pnpm run import:docs",
    "import:dry-run": "IMPORT_GITHUB=true IMPORT_DRY_RUN=true astro sync",
    "import:clear": "tsx scripts/clean-docs-import.ts",
    "_section:sidebar": "====================== Sidebar Scripts ======================",
    "sidebar:generate": "npx tsx scripts/manage-sidebar-meta.js --clean && npx tsx scripts/manage-sidebar-meta.js",
    "sidebar:update": "npx tsx scripts/manage-sidebar-meta.js --update",
    "sidebar:overwrite": "npx tsx scripts/manage-sidebar-meta.js --overwrite",
    "sidebar:preview": "npx tsx scripts/manage-sidebar-meta.js --dry-run"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/markdown-remark": "^6.3.10",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/starlight": "^0.36.0",
    "@astrojs/starlight-tailwind": "^4.0.1",
    "@astrojs/tailwind": "^6.0.2",
    "@catppuccin/palette": "^1.2.0",
    "@catppuccin/vscode": "^3.15.1",
    "@larkiny/astro-github-loader": "^0.11.3",
    "@tailwindcss/vite": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "astro": "^5.16.9",
    "astro-d2": "^0.3.0",
    "astro-icon": "^1.1.0",
    "astro-rehype-relative-markdown-links": "^0.17.3",
    "astro-remote": "^0.3.3",
    "js-yaml": "^4.1.0",
    "marked": "^13.0.1",
    "octokit": "^5.0.4",
    "picomatch": "^4.0.3",
    "prismjs": "^1.29.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rehype": "^13.0.1",
    "rehype-external-links": "^3.0.0",
    "sharp": "^0.33.5",
    "starlight-auto-sidebar": "^0.1.2",
    "starlight-image-zoom": "^0.11.1",
    "starlight-links-validator": "^0.19.2",
    "starlight-llms-txt": "^0.5.0",
    "starlight-openapi": "^0.21.1",
    "starlight-typedoc": "^0.17.0",
    "tailwindcss": "^4.1.18",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "widdershins": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@eslint/js": "^9.9.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.12.0",
    "@typescript-eslint/parser": "^8.4.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "handlebars": "^4.7.8",
    "pnpm": "^10.6.3",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.19.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.4.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": "^10.6.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
